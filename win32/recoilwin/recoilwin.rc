	VK_ESCAPE, IDM_EXIT, VIRTKEY
	"c", IDM_COPY
	"C", IDM_COPY
	"^c", IDM_COPY
	"\r", IDM_FULLSCREEN
	VK_RETURN, IDM_FULLSCREEN, ALT, VIRTKEY
	"f", IDM_FULLSCREEN
	"F", IDM_FULLSCREEN
