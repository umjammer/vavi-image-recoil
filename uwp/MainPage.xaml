<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="RECOIL.MainPage">

	<Image Name="Image" />

	<Page.BottomAppBar>
		<CommandBar>
			<AppBarButton Icon="OpenFile" Label="Open" Click="OpenFile" />
			<AppBarButton Name="PreviousButton" Icon="Back" Label="Previous" Click="OpenPrevious" Visibility="Collapsed" />
			<AppBarButton Name="NextButton" Icon="Forward" Label="Next" Click="OpenNext" Visibility="Collapsed" />
		</CommandBar>
	</Page.BottomAppBar>
</Page>
