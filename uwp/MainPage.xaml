<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="RECOIL.MainPage">

	<Image Name="Image" />

	<Page.BottomAppBar>
		<CommandBar>
			<CommandBar.Content >
				<TextBlock Name="FileName" Margin="12" />
			</CommandBar.Content>
			<AppBarButton Icon="OpenFile" Label="Open" Click="OpenFile" />
			<AppBarButton Name="SaveAsButton" Icon="Save" Label="Save as" Click="SaveAs" Visibility="Collapsed" />
			<AppBarButton Name="ShareButton" Icon="Share" Label="Share" Click="Share" Visibility="Collapsed" />
			<AppBarButton Name="CopyButton" Icon="Copy" Label="Copy" Click="Copy" Visibility="Collapsed" />
			<AppBarButton Name="PreviousButton" Icon="Back" Label="Previous" Click="OpenPrevious" Visibility="Collapsed" />
			<AppBarButton Name="NextButton" Icon="Forward" Label="Next" Click="OpenNext" Visibility="Collapsed" />
		</CommandBar>
	</Page.BottomAppBar>
</Page>
